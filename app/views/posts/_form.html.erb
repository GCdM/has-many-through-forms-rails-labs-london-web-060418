<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>

  <%= f.fields_for :categories, @post.categories.build do |category| %>
    <%= category.label :new_category %>
    <%= category.text_field :name %><br>
  <% end %>

  <%= f.submit %>
<% end %>
